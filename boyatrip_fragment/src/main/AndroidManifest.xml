<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faberhurt.boyatrip_fragment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Boyatrip"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Boyatrip">
        <activity
            android:name=".tabbed.TabbedActivity"
            android:exported="true"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/Theme.Boyatrip.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name=".drawer.DrawerActivity"
        android:exported="true"
        android:label="@string/title_activity_drawer"
        android:theme="@style/Theme.Boyatrip.NoActionBar" />
    <activity
        android:name=".bottom.BottomActivity"
        android:exported="true"
        android:label="@string/title_activity_bottom" />
    <activity
        android:name=".main.MainActivity"
        android:exported="true" />
</application>

    </manifest>