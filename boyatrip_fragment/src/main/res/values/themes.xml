<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Boyatrip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#87C76E</item>
        <item name="colorPrimaryVariant">#6AAE6D</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6AAE6D</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title_Place">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Text_Subtitles">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#E71E11</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#131313</item>
    </style>

    <style name="Theme.Boyatrip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Boyatrip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Boyatrip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>